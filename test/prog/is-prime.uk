~ ubik-tests/is-prime
+ *boolean

# naive primality checking; checks divisibility by every number between X and
# 1, exclusive.
: is-prime
    ^ Number -> Boolean
    = \x -> {
        : inner-check = \y -> ? {
            . eq y 1 => true
            . eq (rational-remainder x y) 0 => false
            . => inner-check (rational-subtract y 1)
        }
        ! inner-check (rational-subtract x 1)
    }

! ? {
    . is-prime 7 => "7 is prime!"
    .            => "7 isn't prime?!"
}
