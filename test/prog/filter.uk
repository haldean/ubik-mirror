` list
` boolean
~ ubik-tests/filter

# : filter
#     ^ (a -> Boolean) -> List a -> List a
#     = \f l -> ? l {
#         . Nil => Nil
#         . Cons head tail => ? {
#             . f head => Cons head (filter f tail)
#             .        => filter f tail
#         }
#     }
: filter
    ^ (a -> boolean:Boolean) -> list:List a -> list:List a
    = \f l -> ? l {
        . list:Nil => list:Nil
        . list:Cons head tail => ? {
            . f head => list:Cons head (filter f tail)
            .        => filter f tail
        }
    }
